@using BlogPosts.Models;
@using PostDatabase;
@model PostModel
<h2>@Model.post.Title</h2>
<h4>@Model.post.Content</h4>
<h5>@Model.post.Date</h5>

@if (User.Identity.IsAuthenticated)
{
    <form action="/home/addreply" class="form-control" method="post">
        <label>Reply</label>
        <input type="text" size="150" name="reply" />
        <input type="hidden" value=@Model.post.Id name="postId" />

        <button type="submit" class="btn-success">Submit</button>
    </form>

}
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>Replies</th>
        <th>Date</th>
        <th>User</th>
    </tr>

    @foreach (Replies r in Model.replies)
    {

        <tr>

            <td>@r.Reply</td>
            <td>@r.Date</td>
            <td>@r.User.Name</td>
        </tr>

    }
    </table>



